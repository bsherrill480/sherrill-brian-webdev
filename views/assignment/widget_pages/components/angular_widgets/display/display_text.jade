include ../../../../components/lists
include ../../widget_element_options

div.widget-item
    +widget_options("#/user/{{model.userId}}/website/{{model.websiteId}}/page/" +
    "{{model.pageId}}/widget/{{widget._id}}" )
    div(ng-if='widget.formatted', text-angular
    ta-toolbar="[['h1','h2','h3'],['bold','italics','underline','strikeThrough']," +
    "['ul','ol'],['justifyLeft','justifyCenter','justifyRight','justifyFull']," +
    "['indent','outdent'],['html']]")
    input.form-control(ng-if='!widget.formatted && (!widget.rows || widget.rows===1)' placeholder='{{widget.placeholder}}')
    textarea.form-control(ng-if='!widget.formatted && (widget.rows > 1)' rows='{{widget.rows}}' placeholder='{{widget.placeholder}}') {{widget.text}}

