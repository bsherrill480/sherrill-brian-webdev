extends websites-nav-layout

include ../components/headers
include ../components/alert_error

//block website-header
//    +leftListRightCompleted('Websites', 'Edit Website', '/assignment/website-list.html',
//    '/assignment/website-new.html', '/assignment/website-list.html')

block website-header
    +leftListRightCompleted('Websites', 'Edit Website',
    '#/user/{{model.userId}}/website',
    '#/user/{{model.userId}}/website/new',
    '#/user/{{model.userId}}/website',
    'model.done(model.website)')

block website-content
    form
        +alertError
        div.form-group
            label Name
            input.form-control(type="text" placeholder="Name" ng-model="model.website.name")
            div.text-danger {{model.errors.name}}
        div.form-group
            label Description
            textarea.form-control(placeholder="Description", rows=5,
            ng-model="model.website.description")
        button.btn.btn-danger.btn-block(ng-click='model.deleteWebsite(model.website._id)') Delete


